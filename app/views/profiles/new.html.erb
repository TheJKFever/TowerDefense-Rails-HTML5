<% content_for :title, "Tower Defense | Signup" %>
<div class= "Sign_Form">
  <h1>Sign Up</h1>
  <%= form_for(:user, :url => {:controller => 'profiles', :action => 'create'}) do |f| %>

    <p>Username:</br> <%= f.text_field :username, class: "Sign_Form_Field" %></p>
    <p>Password:</br> <%= f.password_field :password, class: "Sign_Form_Field" %></p>
    <p>Password Confirmation:</br> <%= f.password_field :password_confirmation, class: "Sign_Form_Field" %></p>
    <%= f.submit :Signup %>
  <% end %>
  <% if @user.errors.any? %>
	<ul class="Signup_Errors">
		<% for message_error in @user.errors.full_messages %>
			<li>* <%= message_error %></li>
	  	<% end %>
	</ul>
  <% end %>
</div>